<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "../../../dtd/mapper.dtd">

<mapper namespace="test/mapper@UserMapper">

    <select id="SelectTestById" parameterType="id:int, name:string, age:int" resultType="id:int64">
        select * from test where id= #{id}
    </select>

    <select id="SelectTestByName" parameterType="id:int, name:string, age:int" resultType="id:int64">
        select * from test
        <choose>
            <when test="id>0">
                id = #{id}
            </when>
            <when test="name != ''">
                name = '{#name}'
            </when>
            <otherwise>
                age = #{age}
            </otherwise>
        </choose>
    </select>

    <select id="SelectTestForeach" parameterType="names" resultType="id:int64">
        select * from test
        <where>
            name in
            <foreach item="item" collection="names" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </select>


</mapper>