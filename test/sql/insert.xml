<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//gobatis.co//DTD Mapper 1.0//EN" "gobatis.co/dtd/mapper.dtd">
<mapper>
    <insert id="InsertR001" parameter="member">
        insert into members(
        username,
        email,
        mobile,
        password,
        status
        ) values(
        #{member.Username},
        #{member.Email},
        #{member.Mobile},
        #{member.Password},
        #{member.Status}
        )
    </insert>

    <select id="InsertR002" parameter="member" result="id">
        insert into members(
        username,
        email,
        mobile,
        password,
        status
        ) values(
        #{member.Username},
        #{member.Email},
        #{member.Mobile},
        #{member.Password},
        #{member.Status}
        ) returning id;
    </select>

    <insert id="InsertR011" parameter="member">
        <inserter table="'members'" entity="member">
            <field name="*"/>
            <exclude name="'id'"/>
            <exclude name="'created_at'"/>
            <exclude name="'updated_at'"/>
        </inserter>
    </insert>

    <select id="InsertR012" parameter="member" result="id">
        <bind name="table" value="'members'"/>
        <inserter table="table">
            <field name="'username'">#{member.Username}</field>
            <field name="'password'">#{member.Password}</field>
        </inserter>
        returning id;
    </select>
</mapper>